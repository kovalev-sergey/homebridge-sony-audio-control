{
    "pluginAlias": "receiver",
    "pluginType": "accessory",
    "singular": false,
    "headerDisplay": "See [API-documentation](https://developer.sony.com/develop/audio-control-api/api-references/device-uri) for input URIs",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "Sony Receiver",
                "required": true
            },
            "ip": {
                "title": "IP address",
                "type": "string",
                "format": "ipv4",
                "required": true,
                "description": "The IP address of the device"
            },
            "maxVolume": {
                "title": "Max volume",
                "type": "number",
                "required": false,
                "placeholder": 100,
                "description": "Max volume of the device (used to calculate volume percentage)"
            },
            "outputZone": {
                "title": "Output zone",
                "type": "string",
                "default": "extOutput:zone?zone=1",
                "required": false,
                "typeahead": {
                    "source": [
                      "extOutput:zone?zone=1",
                      "extOutput:zone?zone=2",
                      "extOutput:zone?zone=4"
                    ]
                },
                "description": "The output zone to control"
            },
            "enableNetworkStandby": {
                "title": "Enable Network Standby",
                "type": "boolean",
                "default": true,
                "required": false,
                "description": "Enable to allow to turn on from standby (significantly raises energy consumption)"
            },
            "inputs": {
                "title": "Inputs",
                "type": "array",
                "required": false,
                "items": {
                    "title": "Input",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "Input TV",
                            "placeholder": "Input TV",
                            "required": true
                        },
                        "uri": {
                            "title": "URI",
                            "type": "string",
                            "format": "uri",
                            "default": "extInput:sat-catv",
                            "placeholder": "extInput:sat-catv",
                            "required": true,
                            "description": "See link in header for URIs"
                        }
                    }
                }
            },
            "soundFields": {
                "title": "Soundfields",
                "type": "array",
                "required": false,
                "items": {
                    "title": "Soundfield",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "Stereo Mode",
                            "placeholder": "Stereo Mode",
                            "required": true
                        },
                        "value": {
                            "title": "Value",
                            "type": "string",
                            "default": "2chStereo",
                            "placeholder": "2chStereo",
                            "required": true
                        }
                    }
                }
            }
        }
    },
    "layout": [
        {
            "key": "name"
        },
        {
            "key": "ip"
        },
        {
            "key": "maxVolume"
        },
        {
            "key": "outputZone"
        },
        {
            "key": "enableNetworkStandby"
        },
        {
            "type": "section",
            "title": "Inputs",
            "expandable": true,
            "expanded": false,
            "key": "inputs",
            "items": [
                {
                    "key": "inputs[].name"
                },
                {
                    "key": "inputs[].uri"
                }
            ]
        },
        {
            "type": "section",
            "title": "Soundfields",
            "expandable": true,
            "expanded": false,
            "key": "soundFields",
            "items": [
                {
                    "key": "soundFields[].name"
                },
                {
                    "key": "soundFields[].value"
                }
            ]
        }
    ]
}